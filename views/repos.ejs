<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GitHub Repositories</title>
</head>
<body>
  <h1>Your GitHub Repositories</h1>
  <ul>
    <% repos.forEach(repo => { %>
      <li>
        <a href="<%= repo.html_url %>"><%= repo.name %></a>
        <form action="/repos/<%= repo.owner.login %>/<%= repo.name %>/contents/newfile.txt" method="post">
          <input type="text" name="content" placeholder="File content" required>
          <input type="text" name="message" placeholder="Commit message" required>
          <button type="submit">Create/Update File</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
